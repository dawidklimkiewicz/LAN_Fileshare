<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>

	<Style Selector="Border#hostListingBorder">
		<Setter Property="BorderBrush" Value="{DynamicResource BorderColor}" />
		<Setter Property="BorderThickness" Value="0,0,1,0" />
	</Style>

	<Style Selector="Border#localUsernameBorder">
		<Setter Property="BorderBrush" Value="{DynamicResource LightBorderColor}" />
		<Setter Property="BorderThickness" Value="0,0,0,1" />
	</Style>

	<Style Selector="StackPanel#localUserStackPanel">
		<Setter Property="Background" Value="{DynamicResource DarkerBackgroundColor}" />
		<Setter Property="Orientation" Value="Vertical" />
		<Setter Property="Spacing" Value="3" />
	</Style>

	<Style Selector="StackPanel#networkDevicesStackPanel">
		<Setter Property="Orientation" Value="Horizontal" />
		<Setter Property="Spacing" Value="2" />
		<Setter Property="Margin" Value="15,10,0,0" />
	</Style>

	<Style Selector="TextBlock#networkDevicesLabelIcon" >
		<Setter Property="FontFamily" Value="{DynamicResource Phosphor}" />
		<Setter Property="FontSize" Value="22" />
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}" />
		<Setter Property="Text" Value="&#xE4EA;" />
	</Style>

	<Style Selector="TextBlock#networkDevicesLabelTextBlock" >
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="FontSize" Value="14" />
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}" />
		<Setter Property="Text" Value=" Network devices" />
	</Style>

	<Style Selector="ListBox#hostListingListBox" >
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Padding" Value="0,0,15,0" />
		<Setter Property="Margin" Value="10,10,0,0" />
		<Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
		<Setter Property="SelectionMode" Value="Single" />
	</Style>

	<Style Selector="TextBlock#hostItemNameTextBlock" >
		<Setter Property="FontSize" Value="16" />
		<Setter Property="FontWeight" Value="SemiBold" />
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}" />
		<Setter Property="TextTrimming" Value="CharacterEllipsis" />
		<Setter Property="Margin" Value="0" />
	</Style>
	
	<Style Selector="TextBlock#localUsernameTextBlock">
		<Setter Property="Padding" Value="20,20,20,0" />
		<Setter Property="FontSize" Value="22" />
		<Setter Property="FontWeight" Value="SemiBold" />
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}" />
		<Setter Property="TextTrimming" Value="CharacterEllipsis" />
	</Style>

	<Style Selector="TextBlock#localAddressTextBlock">
		<Setter Property="Padding" Value="20,0,20,20" />
		<Setter Property="FontSize" Value="16" />
		<Setter Property="Foreground" Value="{DynamicResource SecondaryTextColor}" />
	</Style>

	<Style Selector="ListBoxItem.hostListingItem">
		<Setter Property="Background" Value="{DynamicResource HostItemBackground}" />
		<Setter Property="CornerRadius" Value="5" />
		<Setter Property="Margin" Value="0,0,0,3" />
		<Setter Property="BorderBrush" Value="Transparent" />
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="Padding" Value="0" />
	</Style>
	
</Styles>
