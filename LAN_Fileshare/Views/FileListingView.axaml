<UserControl
    x:Class="LAN_Fileshare.Views.FileListingView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:LAN_Fileshare.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="using:LAN_Fileshare.Views"
    xmlns:vm="using:LAN_Fileshare.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:FileListingViewModel"
    mc:Ignorable="d">
	
	<Grid RowDefinitions="auto,auto,*" Background="{DynamicResource SecondaryBackgroundColor}">
		<StackPanel Orientation="Vertical"
					Margin="15,20,15,20"
				    Grid.Row="0"  >
			<TextBlock 
				FontSize="36"
				Foreground="{DynamicResource PrimaryTextColor}"
				Text="Username"/>
			<TextBlock 
				FontSize="20" 
				Foreground="{DynamicResource SecondaryTextColor}"
				Text="192.168.0.1"/>
		</StackPanel>

		<TextBox
            Grid.Row="1"
            Margin="10,0,10,10"
			Background="Transparent"
			BorderBrush="{DynamicResource BorderColor}"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            CornerRadius="7"
            FontSize="16"
			Foreground="{DynamicResource SecondaryTextColor}"
            Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Watermark="Search files...">
			<TextBox.Styles>
				<Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
					<Setter Property="Background" Value="{DynamicResource PrimaryBackgroundColor}"/>
				</Style>
				<Style Selector="TextBox:pointerover /template/ Border">
					<Setter Property="Background" Value="{DynamicResource PrimaryBackgroundColor}"/>
					<Setter Property="BorderBrush" Value="{DynamicResource BorderColor}" />
				</Style>
			</TextBox.Styles>
		</TextBox>
		
        <TabControl Grid.Row="2">
            <TabItem 
			    FontSize="18"
			    FontWeight="SemiBold"
			    Foreground="{DynamicResource PrimaryTextColor}">
				<TabItem.Header>
					<StackPanel Orientation="Horizontal" Spacing="5">
						<TextBlock FontFamily="{DynamicResource Phosphor}" VerticalAlignment="Center" Text="&#xE4C0;"/>
						<TextBlock Text="Send Files"/>
					</StackPanel>
				</TabItem.Header>
                <ScrollViewer
                    x:Name="FileUploadsListBox"
                    Margin="5,5,5,2"
                    DragDrop.AllowDrop="True"
                    DragDrop.DragLeave="FileUploadsList_DragLeave"
                    DragDrop.DragOver="FileUploadsList_DragOver"
                    DragDrop.Drop="FileUploadsList_Drop">
                    <ItemsControl ItemsSource="{Binding FilteredFileUploadList}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:FileUploadItemViewModel">
                                <view:FileUploadItemView Margin="0,0,0,3" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ScrollViewer.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="{Binding ClearFinishedUploadsCommand}" Header="Remove finished files" />
                        </ContextMenu>
                    </ScrollViewer.ContextMenu>
                </ScrollViewer>

			    <TabItem.Styles>
				    <Style Selector="TabItem:selected /template/ Border#PART_SelectedPipe">
					    <Setter Property="Background" Value="{DynamicResource SecondarySelectionColor}" />
				    </Style>
				    <Style Selector="TabItem /template/ ContentPresenter">
					    <Setter Property="Foreground" Value="Gray"/>
				    </Style>
				    <Style Selector="TabItem:selected /template/ ContentPresenter" >
					    <Setter Property="Foreground" Value="{DynamicResource SecondarySelectionColor}" />
				    </Style>
				    <Style Selector="TabItem:pointerover /template/ ContentPresenter">
					    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}" />
				    </Style>
				    <Style Selector="TabItem:selected:pointerover /template/ ContentPresenter">
					    <Setter Property="Foreground" Value="{DynamicResource SecondarySelectionColor}"/>
				    </Style>
			    </TabItem.Styles>
            </TabItem>
            <TabItem 
			    FontSize="18" 
			    Foreground="{DynamicResource PrimaryTextColor}"
			    FontWeight="SemiBold">
				<TabItem.Header>
					<StackPanel Orientation="Horizontal" Spacing="5">
						<TextBlock FontFamily="{DynamicResource Phosphor}" VerticalAlignment="Center" Text="&#xE20C;"/>
						<TextBlock Text="Download Files"/>
					</StackPanel>
				</TabItem.Header>
                <ScrollViewer Margin="5,5,5,2">
                    <ItemsControl ItemsSource="{Binding FilteredFileDownloadList}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="vm:FileDownloadItemViewModel">
                                <view:FileDownloadItemView Margin="0,0,0,3" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <TabItem.Styles>
				    <Style Selector="TabItem /template/ ContentPresenter">
					    <Setter Property="Foreground" Value="Gray"/>
				    </Style>
                    <Style Selector="TabItem:selected /template/ Border#PART_SelectedPipe">
                        <Setter Property="Background" Value="{DynamicResource SecondarySelectionColor}" />
                    </Style>
				    <Style Selector="TabItem:selected /template/ ContentPresenter" >
					    <Setter Property="Foreground" Value="{DynamicResource SecondarySelectionColor}" />
				    </Style>
				    <Style Selector="TabItem:pointerover /template/ ContentPresenter">
					    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}" />
				    </Style>
				    <Style Selector="TabItem:selected:pointerover /template/ ContentPresenter">
					    <Setter Property="Foreground" Value="{DynamicResource SecondarySelectionColor}"/>
				    </Style>
                </TabItem.Styles>
            </TabItem>

            <TabControl.Styles>
                <Style Selector="TabControl">
                    <Setter Property="Template">
                        <ControlTemplate>
                            <Border Background="{TemplateBinding Background}">
                                <Grid RowDefinitions="auto, *">
                                    <Grid Background="{DynamicResource SecondaryBackgroundColor}" ColumnDefinitions="auto, *">
                                        <ItemsPresenter
                                            Name="PART_ItemsPresenter"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            ItemsPanel="{TemplateBinding ItemsPanel}" />
                                        <!--<TextBox
                                            Grid.Column="1"
                                            Width="250"
                                            Margin="20,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            CornerRadius="7"
                                            FontSize="16"
                                            Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Watermark="Search" />-->
                                    </Grid>
                                    <ContentPresenter
                                        Name="PART_SelectedContentHost"
                                        Grid.Row="1"
                                        HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                        Background="Transparent"
                                        Content="{TemplateBinding SelectedContent}"
                                        ContentTemplate="{TemplateBinding SelectedContentTemplate}" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter>
                </Style>
            </TabControl.Styles>
        </TabControl>
	</Grid>


</UserControl>
