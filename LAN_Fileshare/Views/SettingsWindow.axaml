<Window
    x:Class="LAN_Fileshare.Views.SettingsWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=""
    Width="450"
    Height="800"
    MinWidth="450"
    MinHeight="400"
    MaxWidth="450"
    d:DesignHeight="800"
    d:DesignWidth="450"
    Background="{StaticResource SecondaryBackgroundColor}"
    mc:Ignorable="d">

    <ScrollViewer PointerPressed="ScrollViewer_PointerPressed">
        <StackPanel>
            <TextBlock
                Margin="30,20,30,15"
                FontSize="20"
                FontWeight="Bold"
                Foreground="{StaticResource PrimaryTextColor}"
                Text="Settings" />
            <Separator Background="{StaticResource BorderColor}" />

            <StackPanel Margin="30,15,30,0" Spacing="30">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="15"
                        Foreground="{StaticResource PrimaryTextColor}"
                        Text="Username" />
                    <TextBox MaxLength="32" Text="" />
                </StackPanel>

                <!--  Automatic Download  -->
                <StackPanel>
                    <StackPanel
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="10">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="15"
                            Foreground="{StaticResource PrimaryTextColor}"
                            Text="Automatic Download" />
                        <ToggleSwitch BorderBrush="Gray" IsChecked="True" />
                    </StackPanel>
                    <TextBlock
                        FontSize="13"
                        Foreground="Gray"
                        Text="Automatically download files upon receiving" />
                </StackPanel>

                <!--  Default Download Path  -->
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="15"
                        Foreground="{StaticResource PrimaryTextColor}"
                        Text="Default Download Path" />
                    <Grid ColumnDefinitions="*,auto">
                        <TextBox Text="C:/dasdff/sd/fs/dfs/" />
                        <Button
                            Grid.Column="1"
                            Margin="15,0,5,0"
                            Classes="iconButtonWithBorder">
                            <Label Classes="iconButtonLabel" Content="&#xE256;" />
                        </Button>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
